<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/indicatorBar"
        android:orientation="horizontal">

        <!-- for left warning signal -->
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/flashing_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/ctDesc"
                android:src="@drawable/ic_lightbulb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:textColor="#FFF"
                android:text="Left Warning"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/connection"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/ctDesc"
                android:src="@drawable/ic_connect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:textColor="#FFF"
                android:text="@string/connection"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/headlight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/ctDesc"
                android:src="@drawable/ic_headlight"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:textColor="#FFF"
                android:text="@string/headlight"/>
        </LinearLayout>

        <!-- for right warning signal -->
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/flashing_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/ctDesc"
                android:src="@drawable/ic_lightbulb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:textColor="#FFF"
                android:text="Right Warning"/>
        </LinearLayout>


