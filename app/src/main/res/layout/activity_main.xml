    <LinearLayout
        android:id="@+id/SpeedTextViewLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
        <TextView
            android:id="@+id/speedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:text="@string/numb_default"
            android:textSize="150sp"
            android:textColor="#FFF"
            android:maxLength="3"
            android:maxLines="1"
            android:textStyle="normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:text="@string/kmph"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/SpeedTextViewLayout"
        android:id="@+id/DistTextViewLayout"
        android:layout_marginStart="40dp">
        <TextView
            android:id="@+id/DistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:keepScreenOn="true"
            android:text="@string/numb_default"
            android:maxLength="3"
            android:maxLines="1"
            android:textSize="80sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="-13dp"
            android:textColor="#FFF"
            android:text="@string/dist"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distFloatTextView"
        android:text=".0"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/DistTextViewLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:maxLength="2"
        android:layout_marginRight="10dp"
        android:maxLines="1" />
    <!--android:textSize="40sp"/> -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@id/SpeedTextViewLayout"
        android:id="@+id/cadenceTextViewLayout"
        android:layout_marginEnd="40dp">
        <TextView
            android:id="@+id/CadenceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:text="@string/numb_default"
            android:textColor="#FFF"
            android:maxLines="1"
            android:maxLength="3"
            android:textSize="80sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            android:layout_marginTop="-13dp"
            android:text="@string/cadence"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_leftarrow"
        android:id="@+id/leftArrow"
        android:layout_above="@id/cadenceTextViewLayout"
        android:layout_toStartOf="@id/SpeedTextViewLayout"
        android:padding="5dp"
        android:contentDescription="@string/ctDesc"
        android:layout_below="@id/indicatorBar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rightarrow"
        android:id="@+id/rightArrow"
        android:layout_above="@id/DistTextViewLayout"
        android:layout_toEndOf="@id/SpeedTextViewLayout"
        android:padding="5dp"
        android:contentDescription="@string/ctDesc"
        android:layout_below="@id/indicatorBar"/>

</RelativeLayout>

